<h1><%= @list.name %></h1>
<%= link_to 'Retour Ã  toutes les listes', lists_path, class: 'btn btn-secondary' %>
<div class="row mt-5">
  <% @list.movies.each do |movie| %>
    <div class="col-md-4 mb-3">
      <%= link_to movie_path(movie), class: "text-decoration-none" do %>
        <div class="card h-100 custom-card">
          <img class="card-img-top" src="<%= movie.poster_url %>" alt="<%= movie.title %>" style="height: 300px; object-fit: cover;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text mb-auto"><%= movie.overview %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>