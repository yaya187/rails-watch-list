<div class="container mt-4">
  <h1 class="mb-4">List Movies</h1>

  <% @lists.each do |list| %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      </div>
    </div>
  <% end %>

  <% @movies.each do |movie| %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= link_to movie.title, movie_path(movie) %></h5>
      </div>
    </div>
  <% end %>
</div>
